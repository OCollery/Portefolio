    <script>
        //Get the menu:
        myNav = document.getElementById("navigation");

        // When the user scrolls down 20px from the top of the document, show the background-color menu
        window.onscroll = function() {scrollNavigation()};

        function scrollNavigation()
        {
            if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20)
            {
                myNav.style.backgroundColor = "black";
                myNav.style.opacity = "0.6";
            }
            else
            {
                myNav.style.backgroundColor = "initial";
                myNav.style.opacity = "1";
            }
        }


