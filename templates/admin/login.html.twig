{% block main %}
    <div class="divMainLogin">
        <div class="mainLogin col-sm-offset-4 col-sm-5 col-xs-offset-1 col-xs-10">
            <h1 class="titreModif col-xs-offset-1 col-xs-10">Connexion</h1>
            <div>
                {% if error %}
                    <div class="alert alert-danger" role="alert">pseudo ou mot de passe incorrect</div>
                {% endif %}

            </div>
            <form action="{{ path('login') }}" method="POST">
                <div>
                    <div class="col-sm-offset-1 col-sm-10 col-xs-offset-1 col-xs-9"><input id="mail" name="_username" type="email" required placeholder="Mail"></div><br>
                </div>
                <div>
                    <div class="col-xs-offset-1 col-sm-10 col-xs-9"><input id="password" name="_password" type="password" required placeholder="Mot de passe"></div>
                </div>
                <div class="checkbox mb-3 col-xs-offset-1 col-sm-10 col-xs-10">
                    <label>
                        <input type="checkbox" name="_remember_me">Se souvenir de moi
                    </label>

                </div>
                <br>
                <button type = "submit" class = "btn btn-primary col-xs-offset-1 col-sm-10 col-xs-10">
                    Connexion
                </button>
            </form>
            <a class="lienLogin col-xs-offset-1 col-sm-10 col-xs-10" href="{{ path('createUser') }}"> Cr√©er un compte </a>
        </div>
    </div>
{% endblock %}